<div class="post card">
  <div class="card-header">
    <h2>Make a new post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="blog-title">Title</label>
    <input type="text" name="blog-title" class="form-input" />

    <label class="form-label" for="blog-body">Content</label>
    <textarea name="blog-body" class="form-input"></textarea>

    <button type="submit" class="btn">Create</button>
  </form>
</div>

<script src="/js/blogposts.js"></script>