<div class="posts">
  {{#each blogs}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <b href="/blog/{{id}}">{{title}}</b>
      </h2>
      <div>
        Posted by {{user.name}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>
